<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <include layout="@layout/searchbar_toolbar"
            android:id="@+id/search_result_toolbar"/>

        <android.support.v7.widget.CardView
            android:id="@+id/carview_show_results"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:contentPadding="3dp">



                <TextView
                    android:id="@+id/text_view_number_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp10"
                    android:textColor="@color/banker_color"
                    android:fontFamily="@font/agency_fb"
                    android:textSize="30sp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

        </android.support.v7.widget.CardView>


</LinearLayout>

